<%= turbo_frame_tag dom_id(tweet) do %>
  <hr/>
  <p>
    <strong>Body:</strong>
    <%= tweet.body %>
  </p>

  <p>
    <%= button_to "Likes (#{tweet.like_count})", tweet_like_path(tweet), method: :post  %>
    <%= button_to "Retweets (#{tweet.retweets_count})", tweet_retweet_path(tweet), method: :post  %>

  </p>
  <p> <%= link_to "Edit", edit_tweet_path(tweet) %></p>
<% end %>